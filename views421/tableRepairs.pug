div.table-responsive
    h4.shadow.p-2.mb-1.bg-warning.rounded Upcoming Repairs            
        //- mark.bg-dark.text-warning Upcoming Repairs            
    table.table.table-hover.table-sm.table-striped(id=tblID+'u')
        thead.thead-dark
            tr
                th Work Date
                th Odometer
                th Work Location
                th.text-right.pr-5 Total Cost
                th Part Info
                //- th Manufacturer
                th Part Purchased At
        tbody
            //- tr
            each val in repair_list
                if val.car.short_name == car.short_name & val.work_dt_future == 'TBD'
                    tr
                        td.text-center
                            a(href=val.url+'/update') Update
                                    //- #{val.work_dt_future}
                        td.text-center TBD 
                        //- val.odoMileage
                        td= val.shop_loc
                        td.text-right.pr-5= '$ ' + val.total_cost
                        td=(val.part.partNum == "Misc" ? val.work_desc : val.part.part_sht_desc)
                        //- td= val.part.manuf
                        td= val.purchased_at

