extends layout

block content
  h2.mt-n3= title 
    //- |     #[img(class='img-rounded' src='/images/gas-station-96.png' width='36' height='40')]
  
  if station_list.length
    div.container-fluid
      div.row
        div.col-md-1.ml-n4
          div.list-group(id='stationList' role='tablist')
            -var prevBrand = ''
            each station, index in station_list
              if index == 0
                a.list-group-item.list-group-item-action.list-group-item-dark.active(data-toggle='list' href=station.hashname role='tab') 
                  | #{station.brand}
              else
                if station.brand != prevBrand
                  a.list-group-item.list-group-item-action.list-group-item-dark(data-toggle='list' href=station.hashname role='tab') 
                    | #{station.brand}
                
              -prevBrand = station.brand

          a.mt-2.btn.btn-warning.btn-block(role='button' href='/tracker/station/create') Add New Station      

        div.col-md-5.ml-n4
          div.tab-content
            each station, index in station_list
              if index == 0
                div.tab-pane.fade.show.active(id=station.nohashname role='tabpanel')
                  include tableStations

              else
                div.tab-pane.fade(id=station.nohashname role='tabpanel')              
                  include tableStations

  else
    li There are no stations.
    