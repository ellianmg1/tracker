extends layout_bank

block content
  a.btn.btn-primary.float-right.mt-n1(href='/fintra/account/create') #[i.fas.fa-plus] New Account
  h3.mt-n4.mb-3= title
  
  if account_list && account_list.length
    div.row
      div.col-12.col-lg-6.col-xl-3
        div.card
          div.card-header.bg-white.border-0
            div.card-actions.float-right
              div.dropdown.show
                a(href='#' data-toggle='dropdown' data-display='static') ...
                div.dropdown-menu.dropdown-menu-right
