            h5.card-title Checking/Savings
            h6.card-subtitle.text-muted List of Checking and Savings Accounts
          
          div.card-body.p-1
            each account in account_list
              if account.type == 'Checking' || account.type == 'Savings'
                div.card.border.bg-light.cursor-grab.mb-1
                  //- div.card-header
                  //-   h3 #{account.fullname}
                  div.card-body.p-2
                    p.card-text.mb-0 Account Name: #{account.fullname}
                    //- p.card-text Type:       #{account.type}
                    p.card-text.mb-0 Account Number: #{account.accountID}
                    p.card-text Current Balance: #{account.currBal}
