    div.container
      div.row
        div.col-sm-6.col-md-4.col-md-offset-4
          div.panel.panel-danger
            div.panel-heading(style='color: black')
              h3.text-center
                strong Edit Acount Details
            div.panel-body
              form(class='form-signin', action='', method='POST')
                div.row
                  input#username.form-control(type='text', name='username' value=(undefined===user ? '' : user.username), placeholder='Username',required, autofocus)
                  input(type='password', name='password' value=(undefined===user ? '' : user.password), class='form-control nomargin', placeholder='Password', required)
                  input#email.form-control(type='email', name='email' value=(undefined===user ? '' : user.email), placeholder='Email',required)
                  input#firstName.form-control(type='text', name='firstName' value=(undefined===user ? '' : user.firstName), placeholder='First Name',required)
                  input#lastName.form-control(type='text', name='lastName' value=(undefined===user ? '' : user.lastName), placeholder='Last Name',required)
                  //- span.clearfix
                  p
                  hr
                  //- div.panel-footer
                  button(class='btn btn-lg btn-primary btn-block', type='submit') Save changes
                  button(class='btn btn-lg btn-primary btn-block', type='reset') Reset
                  span.clearfix
                  
            #message
              if message
                h1.text-center.error-message #{message}
          div
              a(href='/tracker') #[i(class='far fa-arrow-alt-circle-left fa-2x' style='color:green')] Back to Tracker
              a(href='/signout' class='pull-right') Sign Out #[i(class='fas fa-sign-out-alt fa-2x' style='color:tomato')]                            